@using Aref.Application.Extensions
@using Aref.Application.Statics
@model Aref.Domain.ViewModels.User.Admin.AdminUpdateUserViewModel
@{
    ViewData["Title"] = "User";
}

@section Breadcrumb
{
    <admin-breadcrumb page-title="@ViewData["Title"]">
        <admin-breadcrumb-item asp-area="Admin" asp-controller="User" asp-action="List">List</admin-breadcrumb-item>
        <admin-breadcrumb-item last-active-item="true">Update</admin-breadcrumb-item>
    </admin-breadcrumb>   
}



<div class="row">
    <form asp-area="Admin"
          asp-controller="User"
          asp-action="Update"
          method="post"
          enctype="multipart/form-data">
        <input asp-for="Id" type="hidden"/>
        <div class="row">
            <div class="col-md-9">
                <div class="card">
                    <div class="card-body row">
                        <div class="mb-3 floating-labels">

                            <div class="row align-items-center mt-3">

                                <div class="floating-labels col-md-6 mb-4">
                                    <div class="form-group">
                                        <input asp-for="FirstName" class="form-control">
                                        <span class="bar"></span>
                                        <label asp-for="FirstName"></label>
                                        <span asp-validation-for="FirstName"></span>
                                    </div>
                                </div>

                                <div class="floating-labels col-md-6 mb-4 mt-4 mt-md-0">
                                    <div class="form-group">
                                        <input asp-for="LastName" class="form-control">
                                        <span class="bar"></span>
                                        <label asp-for="LastName"></label>
                                        <span asp-validation-for="LastName"></span>
                                    </div>
                                </div>
                                <div class="floating-labels col-md-6 mb-4 mt-4">
                                    <div class="form-group">
                                        <input asp-for="Mobile" class="form-control" autocomplete="new-phone">
                                        <span class="bar"></span>
                                        <label asp-for="Mobile"></label>
                                        <span asp-validation-for="Mobile"></span>
                                    </div>
                                </div>
                                <div class="floating-labels col-md-6 mb-4 mt-4">
                                    <div class="form-group">
                                        <input asp-for="Mobile2" class="form-control" autocomplete="new-phone">
                                        <span class="bar"></span>
                                        <label asp-for="Mobile2"></label>
                                        <span asp-validation-for="Mobile2"></span>
                                    </div>
                                </div>
                                <div class="floating-labels col-md-6 mb-4 mt-4">
                                    <div class="form-group">
                                        <input asp-for="Email" class="form-control" autocomplete="new-email">
                                        <span class="bar"></span>
                                        <label asp-for="Email"></label>
                                        <span asp-validation-for="Email"></span>
                                    </div>
                                </div>
                                <div class="floating-labels col-md-6 mb-4 mt-4">
                                    <div class="form-group">
                                        <input asp-for="Password" type="text" class="form-control" autocomplete="new-password">
                                        <span class="bar"></span>
                                        <label asp-for="Password"></label>
                                        <span asp-validation-for="Password"></span>
                                    </div>
                                </div>
                                <div class="floating-labels col-md-6 mb-4 mt-4">
                                    <div class="form-group">
                                        <textarea rows="4" asp-for="Notes" class="form-control"></textarea>
                                        <span class="bar"></span>
                                        <label asp-for="Notes"></label>
                                        <span asp-validation-for="Notes"></span>
                                    </div>
                                </div>
                                <div class="floating-labels col-md-6 mb-4 mt-4">
                                    <div class="form-group">
                                        <textarea rows="4" asp-for="Address" class="form-control"></textarea>
                                        <span class="bar"></span>
                                        <label asp-for="Address"></label>
                                        <span asp-validation-for="Address"></span>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <div class="floating-labels mb-4 mt-3">
                            <div class="position-relative">
                                <label asp-for="AvatarImageFile" class="fs-2 mb-2 label-floating"></label>
                                <img ImageFile="1" class="w-100 rounded select-image-preview-box" src="@Model.AvatarImageName"/>
                                <label asp-for="AvatarImageFile" class="hover-icon rounded d-flex align-items-center justify-content-center">
                                    <iconify-icon icon="solar:gallery-edit-broken" class="select-image-icon"></iconify-icon>
                                </label>
                                <input type="file" asp-for="AvatarImageFile" class="d-none" accept="image/png, image/jpeg, image/webp" ImageInput="1"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-area="Admin"
                               asp-controller="User"
                               asp-action="List"
                               class="btn btn-outline-primary">Back To List</a>
                            <button type="submit" class="btn btn-outline-success">Save Changes</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </form>
</div>