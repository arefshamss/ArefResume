@using Aref.Application.Extensions
@using Aref.Application.Statics
@using Aref.Domain.Enums.Common
@using Aref.Infra.Data.Statics
@model Aref.Domain.ViewModels.User.Admin.AdminFilterUsersViewModel
@{
    ViewData["Title"] = "User";
}

@section Breadcrumb
{
    <admin-breadcrumb page-title="@ViewData["Title"]">
        <admin-breadcrumb-item last-active-item="true">List</admin-breadcrumb-item>
    </admin-breadcrumb>
}

@section Scripts
{
    <script src="/admin/js/role-service.js"></script>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="mb-4">
                    <h2 class="card-title">Filter</h2>
                </div>
                <div>
                    <form asp-area="Admin"
                          asp-controller="User"
                          asp-action="List"
                          method="get"
                          id="filter-search"
                          class="floating-labels"
                          no-validation>
                        <input asp-for="Page" type="hidden"/>
                        <div class="row filter-form">

                            <div class="form-group col-12 col-md-4 mb-4">
                                <select class="form-control form-select" asp-for="DeleteStatus"
                                        asp-items="@Html.GetEnumSelectList<DeleteStatus>()"></select>
                                <span class="bar"></span>
                                <label asp-for="DeleteStatus"></label>
                            </div>

                            <div class="col-12 mt-3 d-md-flex">
                                <div class="col-12 col-md-2 p-0 me-1">
                                    <button class="btn btn-rounded btn-outline-primary w-100" type="submit">Search
                                    </button>
                                </div>
                                @if (Model.HasFilters())
                                {
                                    <div class="col-12 col-md-2 p-0 mt-3 mt-md-0">
                                        <a class="btn btn-rounded btn-danger w-100 text-nowrap"
                                           asp-area="Admin"
                                           asp-controller="User"
                                           asp-action="List">Remove Filters
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="card-title">@ViewData["Title"]</h2>
                    </div>
                    <div invoke-permission="@PermissionsName.CreateUser">
                        <a class="btn bg-primary-subtle text-primary"
                           asp-area="Admin"
                           asp-controller="User"
                           asp-action="Create">Add New</a>
                    </div>
                </div>
                @if (Model.Entities is not null && Model.Entities.Any())
                {
                    <div class="table-responsive mb-4 border rounded-1">

                        <table class="table text-nowrap mb-0 align-middle">
                            <thead class="text-dark fs-4">
                            <tr>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">Full Name</h6>
                                </th>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">Mobile</h6>
                                </th>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">Creation date</h6>
                                </th>
                                <th>
                                    <h6 class="fs-4 fw-semibold mb-0">Operation</h6>
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var user in Model.Entities)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img
                                                src="@user.AvatarImageName"
                                                class="rounded-circle"
                                                width="40"
                                                height="40"
                                                alt="User">
                                            <div class="ms-3">
                                                <h6 class="fs-4 fw-semibold mb-0">@(user.FirstName.IsNullOrEmptyOrWhiteSpace() && user.LastName.IsNullOrEmptyOrWhiteSpace() ? "Not registered" : $"{user.FirstName ?? ""} {user.LastName ?? ""}")</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="mb-0 fw-normal fs-4">@user.Mobile</p>
                                    </td>
                                    <td>
                                        <p class="mb-0 fw-normal fs-4">@user.CreatedDate.ToShamsiDateTime()</p>
                                    </td>
                                    <td>
                                        <a invoke-permission="@PermissionsName.UserDetails"
                                           asp-area="Admin"
                                           asp-controller="User"
                                           asp-action="Detail"
                                           asp-route-id="@user.Id"
                                           class="text-info removeAfterDelete @(user.IsDeleted ? "d-none" : "")"
                                           title="Details">
                                            <iconify-icon icon="fluent:eye-28-regular" width="22"
                                                          height="22"></iconify-icon>
                                        </a>
                                        @if (user.Id > 1)
                                        {
                                            <a invoke-permission="@PermissionsName.SetRoleToUser"
                                               asp-area="Admin"
                                               asp-controller="Role"
                                               asp-action="SetRoleToUser"
                                               asp-route-userId="@user.Id"
                                               asp-ajax="true"
                                               asp-ajax-modal-type="Large"
                                               asp-ajax-modal-title="List of roles"
                                               asp-ajax-success="Role.FillFromModel();Role.UpdateTable();"
                                               title="Add a role"
                                               class="text-muted removeAfterDelete @(user.IsDeleted ? "d-none" : "")">
                                                <iconify-icon icon="mdi:lock-plus-outline" width="22"
                                                              height="22"></iconify-icon>
                                            </a>
                                        }
                                        <a invoke-permission="@PermissionsName.UpdateUser"
                                           asp-area="Admin"
                                           asp-controller="User"
                                           asp-action="Update"
                                           asp-route-id="@user.Id"
                                           class="text-warning removeAfterDelete @(user.IsDeleted ? "d-none" : "")"
                                           title="Edit">
                                            <iconify-icon icon="uil:edit" width="22" height="22"></iconify-icon>
                                        </a>

                                        @if (user.Id > 1)
                                        {
                                            @if (user.IsDeleted)
                                            {
                                                <a invoke-permission="@PermissionsName.DeleteOrRecoverUser"
                                                   class="text-info"
                                                   onclick="ConfirmRecover(this, '@Url.Action("DeleteOrRecover", "User", new { area = "Admin", id = user.Id })')"
                                                   title="Recover">
                                                    <iconify-icon icon="solar:undo-left-round-outline" width="22"
                                                                  height="22"></iconify-icon>
                                                </a>
                                            }
                                            else
                                            {
                                                <a invoke-permission="@PermissionsName.DeleteOrRecoverUser"
                                                   class="text-danger"
                                                   onclick="ConfirmDelete(this, '@Url.Action("DeleteOrRecover", "User", new { area = "Admin", id = user.Id })')"
                                                   title="Delete">
                                                    <iconify-icon icon="solar:trash-bin-trash-outline" width="22"
                                                                  height="22"></iconify-icon>
                                                </a>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                    <partial name="_PagingPartial" model="@Model.GetCurrentPaging()"/>

                }
                else
                {
                    <partial name="_NotFoundPartial"/>
                }
            </div>
        </div>
    </div>
</div>

