@using Aref.Domain.Enums.MyResume
@model Aref.Domain.ViewModels.MyResume.Admin.AdminUpdateMyResumeViewModel

@{
    ViewData["Title"] = "My Resume";
}

@section Breadcrumb
{
    <admin-breadcrumb page-title="@ViewData["Title"]">
        <admin-breadcrumb-item asp-area="Admin" asp-controller="MyResume" asp-action="List">List</admin-breadcrumb-item>
        <admin-breadcrumb-item last-active-item="true">Create</admin-breadcrumb-item>
    </admin-breadcrumb>   
}

<div class="row">
    <form asp-area="Admin"
          asp-controller="MyResume"
          asp-action="Update"
          method="post"
          enctype="multipart/form-data">
        <input type="hidden" asp-for="Id"/>
        <div class="row">

                        <div class="col-12">
                <div class="card">
                    <div class="card-body row">
                        <div class="mb-3 floating-labels">

                            <div class="row align-items-center mt-3">
                                
                                <div class="floating-labels col-md-6 mb-4 mt-4 mt-md-0">
                                    <div class="form-group">
                                        <input asp-for="Title" class="form-control">
                                        <span class="bar"></span>
                                        <label asp-for="Title"></label>
                                        <span asp-validation-for="Title"></span>
                                    </div>
                                </div>
                                
                                <div class="floating-labels col-md-6 mb-4 mt-4 mt-md-0">
                                    <div class="form-group">
                                        <input asp-for="Years" class="form-control">
                                        <span class="bar"></span>
                                        <label asp-for="Years"></label>
                                        <span asp-validation-for="Years"></span>
                                    </div>
                                </div>          
                                
                                <div class="floating-labels col-md-6 mb-4 mt-4">
                                    <div class="form-group">
                                        <select class="form-control form-select" asp-for="ResumeType"
                                                asp-items="@Html.GetEnumSelectList<MyResumeType>()"></select>
                                        <span class="bar"></span>
                                        <label asp-for="ResumeType"></label>
                                        <span asp-validation-for="ResumeType"></span>
                                    </div>
                                </div>
                                
                                <div class="floating-labels col-md-6 mb-4 mt-4">
                                    <div class="form-group">
                                        <input asp-for="DisplayPriority" class="form-control">
                                        <span class="bar"></span>
                                        <label asp-for="DisplayPriority"></label>
                                        <span asp-validation-for="DisplayPriority"></span>
                                    </div>
                                </div>      
                                
                                <div class="floating-labels col-md-12 mb-4 mt-4">
                                    <div class="form-group">
                                        <textarea asp-for="Description" rows="5" class="form-control"></textarea>
                                        <span class="bar"></span>
                                        <label asp-for="Description"></label>
                                        <span asp-validation-for="Description"></span>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-area="Admin"
                               asp-controller="MyResume"
                               asp-action="List"
                               class="btn btn-outline-primary">Back To List</a>
                            <button type="submit" class="btn btn-outline-success">Save Changes</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </form>
</div>