@using Aref.Application.Statics
@model Aref.Domain.ViewModels.MySkill.Admin.AdminUpdateMySkillViewModel


@{
    ViewData["Title"] = "My Skill";
}

@section Breadcrumb
{
    <admin-breadcrumb page-title="@ViewData["Title"]">
        <admin-breadcrumb-item asp-area="Admin" asp-controller="MySkill" asp-action="List">List</admin-breadcrumb-item>
        <admin-breadcrumb-item last-active-item="true">Update</admin-breadcrumb-item>
    </admin-breadcrumb>   
}

<div class="row">
    <form asp-area="Admin"
          asp-controller="MySkill"
          asp-action="Update"
          method="post"
          enctype="multipart/form-data">
        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="ImageUrl"/>
        <div class="row">
            <div class="col-md-9">
                <div class="card">
                    <div class="card-body row">
                        <div class="mb-3 floating-labels">

                            <div class="row align-items-center mt-3">
                                
                                <div class="floating-labels col-md-12 mb-4">
                                    <div class="form-group">
                                        <input asp-for="Title" class="form-control">
                                        <span class="bar"></span>
                                        <label asp-for="Title"></label>
                                        <span asp-validation-for="Title"></span>
                                    </div>
                                </div>    
                                
                                <div class="floating-labels col-md-6 mb-4 mt-4">
                                    <div class="form-group">
                                        <input asp-for="Percent" class="form-control" type="text" min="0" max="100"/>
                                        <span class="bar"></span>
                                        <label asp-for="Percent"></label>
                                        <span asp-validation-for="Percent"></span>
                                    </div>
                                </div>          
                                
                                <div class="floating-labels col-md-6 mb-4 mt-4">
                                    <div class="form-group">
                                        <input asp-for="DisplayPriority" class="form-control" type="text" min="0" max="100"/>
                                        <span class="bar"></span>
                                        <label asp-for="DisplayPriority"></label>
                                        <span asp-validation-for="DisplayPriority"></span>
                                    </div>
                                </div>
                                
                                <div class="floating-labels col-md-12 mb-4 mt-4">
                                    <div class="form-group">
                                        <input asp-for="SubTitle" class="form-control">
                                        <span class="bar"></span>
                                        <label asp-for="SubTitle"></label>
                                        <span asp-validation-for="SubTitle"></span>
                                    </div>
                                </div>      

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <div class="floating-labels mb-4 mt-3">
                            <div class="position-relative">
                                <label class="fs-2 label-floating mb-2">Image</label>
                                <img ImageFile="1" class="w-100 rounded select-image-preview-box"
                                     src="@FilePaths.MySkillImagePath@Model.ImageUrl"/>
                                <label asp-for="Image"
                                       class="hover-icon rounded d-flex align-items-center justify-content-center">
                                    <iconify-icon icon="solar:gallery-edit-broken"
                                                  class="select-image-icon"></iconify-icon>
                                </label>
                                <input type="file" asp-for="Image" class="d-none"
                                       accept="image/png, image/jpeg, image/webp" ImageInput="1"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-area="Admin"
                               asp-controller="MySkill"
                               asp-action="List"
                               class="btn btn-outline-primary">Back To List</a>
                            <button type="submit" class="btn btn-outline-success">Save Changes</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </form>
</div>