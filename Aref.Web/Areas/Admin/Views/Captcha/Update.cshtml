@using Aref.Domain.Enums.Captcha
@model Aref.Domain.ViewModels.Captcha.AdminUpdateCaptchaViewModel

@{
    ViewData["Title"] = "Captcha";
}

@section Breadcrumb
{
    <admin-breadcrumb page-title="@ViewData["Title"]">
        <admin-breadcrumb-item asp-area="Admin" asp-controller="Captcha" asp-action="List">List</admin-breadcrumb-item>
        <admin-breadcrumb-item last-active-item="true">Update</admin-breadcrumb-item>
    </admin-breadcrumb>   
}


<div class="row">
    <form asp-area="Admin"
          asp-controller="Captcha"
          asp-action="Update"
          method="post">
        <input asp-for="Id" type="hidden" />
        <div class="col-md-12">
            <div class="card">
                <div class="card-body row mt-4">

                    <div class="mb-3 col-12 col-md-4 floating-labels">
                        <div class="form-group mb-4">
                            <label asp-for="CaptchaType" class="fs-2 label-floating"></label>
                            <select asp-for="CaptchaType" class="form-select" asp-items="@Html.GetEnumSelectList<CaptchaType>()" disabled></select>
                            <span class="bar"></span>
                        </div>
                    </div>

                    <div class="mb-3 col-12 col-md-4 floating-labels">
                        <div class="form-group mb-4">
                            <input asp-for="SiteKey" type="text" class="form-control p-2">
                            <span class="bar"></span>
                            <label asp-for="SiteKey" class="fs-2"></label>
                        </div>
                    </div>

                    <div class="mb-3 col-12 col-md-4 floating-labels">
                        <div class="form-group mb-4">
                            <input asp-for="SecretKey" type="text" class="form-control p-2">
                            <span class="bar"></span>
                            <label asp-for="SecretKey" class="fs-2"></label>
                        </div>
                    </div>
                    
                    <div class="form-check mb-4">
                        <input class="form-check-input" type="checkbox" asp-for="IsActive">
                        <label class="form-check-label" asp-for="IsActive"></label>
                    </div>
                    
                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-area="Admin"
                           asp-controller="Captcha"
                           asp-action="List"
                           class="btn btn-outline-primary">Back To List</a>
                        <button type="submit" class="btn btn-outline-success">Save Changes</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>