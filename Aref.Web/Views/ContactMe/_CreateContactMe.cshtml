@model Aref.Domain.ViewModels.ContactMe.Client.ClientCreateContactMeViewModel

<div class="contact-inner">
    <div class="contact-form">
        <form class="box-1 contact-valid"
              asp-controller="ContactMe"
              asp-action="Contact"
              asp-ajax="true"
              asp-ajax-method="Post"
              asp-ajax-success="sendMessageAjaxSubmitSuccess(data, status, xhr);"
              id="contact-me-form">
            <div class="contact-form-wrapper row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <input asp-for="FullName" class="input-field" 
                               placeholder="Your Name" 
                               type="text" required="">
                    </div>
                    <span asp-validation-for="FullName" class="validation-error"></span>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <input asp-for="Mobile" class="input-field" 
                               placeholder="Phone Number" type="text"
                               required="">
                    </div>
                    <span asp-validation-for="Mobile" class="validation-error"></span>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <input asp-for="Subject" class="input-field" type="text" id="subject"
                               placeholder="Subject" >
                    </div>
                    <span asp-validation-for="Subject" class="validation-error"></span>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <input asp-for="Email" class="input-field" 
                               placeholder="Your Email" type="text">
                    </div>
                    <span asp-validation-for="Email" class="validation-error"></span>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <textarea class="input-field" asp-for="Message"
                                  placeholder="Your Message"></textarea>
                    </div>
                    <span asp-validation-for="Message" class="validation-error"></span>
                </div>
                <div class="col-lg-12">
                    <button type="submit"
                            class="tmp-btn hover-icon-reverse radius-round w-100">
                        <span
                            class="icon-reverse-wrapper">
                            @* <span class="btn-text">Appointment Now</span> *@
                            <span
                                class="btn-text">Send Message</span>
                            <span
                                class="btn-icon">
                                <i
                                    class="fa-sharp fa-regular fa-arrow-right"></i></span>
                            <span
                                class="btn-icon">
                                <i
                                    class="fa-sharp fa-regular fa-arrow-right"></i></span>
                        </span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
