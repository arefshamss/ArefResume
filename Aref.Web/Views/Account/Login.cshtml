@using Aref.Domain.Enums.Captcha
@model Aref.Domain.ViewModels.User.Admin.LoginViewModel

@{
  Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr" data-bs-theme="light" data-color-theme="Blue_Theme" data-layout="vertical">

<head>
  <partial name="~/Areas/Admin/Views/Shared/_MetaTags.cshtml"/>
  <partial name="~/Areas/Admin/Views/Shared/_HeaderReferencesPartial.cshtml"/>
  <title>Aref Shamspour</title>
</head>

<body>
  <!-- Preloader -->
  <div class="preloader">
    <img src="/Admin/assets/images/logos/favicon.png" alt="loader" class="lds-ripple img-fluid" />
  </div>
  <div id="main-wrapper">
    <div class="position-relative overflow-hidden radial-gradient min-vh-100 w-100">
      <div class="position-relative z-index-5">
        <div class="row gx-0">

          <div class="col-lg-6 col-xl-5 col-xxl-4">
            <div class="min-vh-100 bg-body row justify-content-center align-items-center p-5">
              <div class="col-12 auth-card">
                <a asp-area=""
                   asp-controller="Home"
                   asp-action="Index" class="text-nowrap logo-img d-block w-100">
                  <img src="/Admin/assets/images/logos/logo-icon.svg" class="dark-logo" alt="Logo-Dark" />
                </a>
                <h2 class="mb-2 mt-4 fs-7 fw-bolder">Sign In</h2>
                <p class="mb-9">Your Dashboard</p>
                <form asp-area="" asp-controller="Account" asp-action="Login" method="post">
                  <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Mobile</label>
                    <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Mobile"/>
                  </div>
                  <div class="mb-4">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" asp-for="Password"/>
                  </div>
                  <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <div class="form-check">
                      <input class="form-check-input primary" no-validation type="checkbox" asp-for="RememberMe"/>
                      <label class="form-check-label text-dark">
                        Remeber this Device
                      </label>
                    </div>
                  </div>
                  @await Component.InvokeAsync("Captcha", new { section = CaptchaSection.Account })
                  <button type="submit" class="btn btn-primary w-100 py-8 mb-4 rounded-2">Sign In</button>
                </form>
              </div>
            </div>
          </div>

          <div class="col-lg-6 col-xl-7 col-xxl-8 position-relative overflow-hidden bg-dark d-none d-lg-block">
            <div class="circle-top"></div>
            <div>
              <img src="/Admin/assets/images/logos/logo-icon.svg" class="circle-bottom" alt="Logo-Dark" />
            </div>
            <div class="d-lg-flex align-items-center z-index-5 position-relative h-n80">
              <div class="row justify-content-center w-100">
                <div class="col-lg-6">
                  <h2 class="text-white fs-10 mb-3 lh-base">
                    Welcome to MatDash
                  </h2>
                  <span class="opacity-75 fs-4 text-white d-block mb-3">MatDash helps developers to build organized
                    and well
                    <br />
                    coded dashboards full of beautiful and rich modules.
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="dark-transparent sidebartoggler"></div>
  <partial name="~/Areas/Admin/Views/Shared/_FooterReferencesPartial.cshtml"/>
  <partial name="~/Areas/Admin/Views/Shared/_NotificationsPartial.cshtml"/>
  <partial name="~/Areas/Admin/Views/Shared/_ModalPartial.cshtml"/>
  <partial name="~/Areas/Admin/Views/Shared/_ValidationScriptsPartial.cshtml"/>
</body>

</html>